<?xml version="1.0" encoding="utf-8"?>
<com.kloudsync.techexcel.view.BubbleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/meeting_members_setting_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:angle="4dp"
    app:arrowHeight="8dp"
    app:arrowLocation="top"
    app:arrowPosition="130dp"
    app:arrowWidth="16dp"

    app:bubbleColor="@color/divider_line">

    <TextView

        android:layout_marginTop="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:paddingLeft="6dp"
        android:textColor="#999999"
        android:text="设置为主持人"
        android:textSize="14sp" />

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:text="设置为旁听者"
        android:textSize="14sp" />


</com.kloudsync.techexcel.view.BubbleLinearLayout>