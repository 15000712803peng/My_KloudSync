<?xml version="1.0" encoding="utf-8"?>
<com.kloudsync.techexcel.view.BubbleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/meeting_members_setting_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:angle="4dp"
    app:arrowHeight="8dp"
    app:arrowLocation="top"
    app:arrowPosition="130dp"
    app:arrowWidth="16dp"

    app:bubbleColor="@color/divider_line">
    <View
        android:layout_width="match_parent"
        android:layout_height="22dp"/>

    <TextView
        android:id="@+id/txt_setting_presenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:paddingLeft="6dp"
        android:textColor="#999999"
        android:layout_marginBottom="10dp"
        android:text="@string/set_as_host"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_setting_auditor"
        android:layout_marginBottom="14dp"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:text="@string/set_as_participant"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_setting_speak_member"
        android:layout_marginBottom="14dp"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:text="@string/set_as_talkable_participant"
        android:textSize="14sp" />

</com.kloudsync.techexcel.view.BubbleLinearLayout>