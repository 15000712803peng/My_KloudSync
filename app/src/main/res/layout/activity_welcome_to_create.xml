<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/welcome_create_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎来到可达"
            android:textColor="#ff191836"
            android:textSize="26sp"
            />

        <LinearLayout
            android:layout_marginBottom="58dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.kloudsync.techexcel.ui.MaskViewGroup
                android:layout_marginLeft="16dp"
                app:containerCornerRadius="18dp"
                app:containerDeltaLength="8dp"
                app:containerShadowColor="#ffffff"
                app:containerShadowRadius="6dp"
                app:deltaX="2dp"
                app:deltaY="2dp"
                app:enable="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_create"
                    android:padding="16dp"
                    android:background="@drawable/bg_welcome_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="创建新的机构"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </com.kloudsync.techexcel.ui.MaskViewGroup>

            <com.kloudsync.techexcel.ui.MaskViewGroup
                android:layout_marginRight="16dp"
                app:containerCornerRadius="18dp"
                app:containerDeltaLength="8dp"
                app:containerShadowColor="#ffffff"
                app:containerShadowRadius="6dp"
                app:deltaX="2dp"
                app:deltaY="2dp"
                app:enable="true"
                android:layout_weight="1"
                android:id="@+id/tv_chat_selected"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_join_meeting"
                    android:padding="16dp"
                    android:background="@drawable/chat_tab_selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="加入会议"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </com.kloudsync.techexcel.ui.MaskViewGroup>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:id="@+id/layout_bg_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="visible"
            android:id="@+id/txt_back"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="#ff3d78fb"
            android:textSize="13sp"
            />
    </RelativeLayout>

</RelativeLayout>