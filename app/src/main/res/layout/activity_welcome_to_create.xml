<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_welcome"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_kloud"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="23dp"
        android:src="@drawable/icon_kloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="7.5dp"
        android:layout_below="@+id/iv_kloud"
        android:layout_marginLeft="23dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="19sp"
            android:text="你好，欢迎来到"
            android:textColor="#191836"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="可达！"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#191836"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_join_meeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/welcome_tab_join_meeting"
            android:gravity="center"
            android:padding="12dp"
            android:text="加入会议"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/txt_join_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:background="@drawable/welcome_tab_join_company"
            android:gravity="center"
            android:padding="12dp"
            android:singleLine="true"
            android:text="加入公司/机构"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_marginBottom="60dp"
            android:id="@+id/txt_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:background="@drawable/welcome_tab_create_company"
            android:gravity="center"
            android:padding="12dp"
            android:singleLine="true"
            android:text="创建新的公司/机构"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/layout_bg_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_skip"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="返回"
            android:textColor="#ff3d78fb"
            android:textSize="13sp"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>