<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="Space filter"
        android:textColor="#9B9B9B"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/grey" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_show_all"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="Show all spaces"
                android:textColor="@color/txt_color1"
                android:textSize="15sp" />

            <ImageView
                android:layout_toRightOf="@id/txt_show_all"
                android:id="@+id/img_choosen_all"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="28dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/dui"
                android:visibility="visible" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/grey" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/txt_show_only_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="Show my spaces only"
                android:textColor="@color/txt_color1"
                android:textSize="15sp" />

            <ImageView

                android:layout_centerVertical="true"
                android:id="@+id/img_choosen_only"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_toRightOf="@id/txt_show_only_mine"
                android:layout_marginRight="28dp"
                android:scaleType="fitXY"
                android:src="@drawable/dui"
                android:visibility="visible" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/grey" />

    </LinearLayout>


</LinearLayout>