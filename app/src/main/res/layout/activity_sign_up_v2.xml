<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iv_logo_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/app_icon" />

    <TextView
        android:id="@+id/tv_login_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo_icon"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/KloudSync"
        android:textColor="@color/txt_color1"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/tv_login_info"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="39dp"
        android:background="@drawable/bg_edit_line">


        <TextView
            android:id="@+id/tv_cphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/area_code"
            android:textSize="14sp"
            android:textColor="@color/newgrey"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp" />

        <View
            android:id="@+id/v_line"
            android:layout_width="1.5px"
            android:layout_height="17dp"
            android:background="#ffd3d3d3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/tv_cphone"
            android:layout_marginStart="17dp" />

        <EditText
            android:id="@+id/et_telephone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/v_line"
            android:paddingLeft="19dp"
            android:background="@color/white"
            android:hint="@string/Mobile_phone"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:layout_margin="3dp"
            android:textColor="@color/black"
            android:textColorHint="@color/newgrey"
            android:textSize="14sp"

            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_code"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/rl_phone"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="39dp">


        <EditText
            android:id="@+id/et_checkcode"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/bg_edit_line"
            android:hint="@string/Vertification_Code"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/newgrey"
            android:textSize="14sp" />


        <View
            android:layout_width="1px"
            android:layout_height="17dp"
            android:background="#ffd3d3d3"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:layout_toLeftOf="@+id/tv_sendcheckcode" />

        <TextView
            android:id="@+id/tv_sendcheckcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="@string/Send_code"
            android:textColor="@color/blue1" />
    </RelativeLayout>


    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/rl_code"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="39dp"
        android:background="@drawable/bg_edit_line"
        android:hint="@string/Name_info"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/newgrey"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/et_name"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="39dp">


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/bg_edit_line"
            android:hint="@string/Password_hint"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="20"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/newgrey"
            android:textSize="14sp" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_check"
            android:layout_width="17dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/check" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_sign_up"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_password"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="39dp"
        android:background="@drawable/bluewhite_back"
        android:gravity="center"
        android:text="@string/Sign_up"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/layout_login"
        android:gravity="center"
        android:layout_below="@+id/tv_sign_up"
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:text="Already have an account, "
            android:textColor="@color/darkgrey"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sign_up"
            android:layout_centerHorizontal="true"
            android:text="Login in"
            android:textColor="#007BFF"
            android:textSize="14sp" />
    </LinearLayout>


</RelativeLayout>