<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lightgrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="32dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/step1"
            android:layout_width="42dp"
            android:layout_height="42dp" />

        <View
            android:layout_weight="1"
            android:background="@color/divider"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="1dp" />

        <ImageView
            android:src="@drawable/step2"
            android:layout_width="42dp"
            android:layout_height="42dp" />
    </LinearLayout>


    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingTop="16dp"

            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/txt_color1"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:text="logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingBottom="16dp"
                android:textColor="@color/txt_color1"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                android:text="@string/supporttype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:background="@drawable/image_border_bg"
            android:layout_width="41dp"
            android:layout_marginRight="26dp"
            android:padding="2dp"
            android:layout_height="41dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_select_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/as_logo"
                android:contentDescription="@string/head"
                android:scaleType="center"
                fresco:fadeDuration="500"
                fresco:failureImage="@drawable/icon_file_library"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@drawable/icon_file_library"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:roundAsCircle="false" />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_marginLeft="18dp"
        android:layout_width="match_parent"
        android:background="@color/divider"
        android:layout_height="1px" />
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/txt_color1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:text="@string/name_upper" />

        <EditText
            android:layout_marginRight="16dp"
            android:gravity="right|center_vertical"
            android:layout_marginLeft="12dp"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColorHint="#9B9B9B"
            android:textColor="#3E3F42"
            android:background="@color/white"
            android:hint="@string/input_organization_name"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
    android:id="@+id/tv_submit"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_marginLeft="26dp"
    android:layout_marginRight="26dp"
    android:layout_marginTop="38dp"
    android:gravity="center"
    android:background="@drawable/bottom_blue_bg"
    android:text="@string/Submit"
    android:textSize="15sp"
    android:textColor="@color/white" />


    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/txt_enter"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:gravity="center"
        android:text="@string/enter"
        android:textSize="15sp"
        android:textColor="#007bff" />

</LinearLayout>