                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="@integer/rc_image_quality"

                android:foreground="?android:attr/selectableItemBackground"
                fresco:cardBackgroundColor="@color/grey"
                fresco:cardCornerRadius="4dp"
                fresco:cardElevation="2dp"
                fresco:contentPadding="1px"
                fresco:cardPreventCornerOverlap="false"
                fresco:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

