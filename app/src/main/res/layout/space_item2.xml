<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_space_item"
    android:layout_height="wrap_content">

    <com.kloudsync.techexcel.ui.MaskViewGroup
        app:containerCornerRadius="12dp"
        app:containerDeltaLength="10dp"
        app:containerShadowColor="#1f27347d"
        app:containerShadowRadius="3dp"
        app:deltaX="0dp"
        app:deltaY="3dp"
        app:enable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/space_bg"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/spacerelativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_sort"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:background="@drawable/icon_space" />

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/tv_sort"
                    android:text="Sample space1"
                    android:textColor="@color/black" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/attachmentcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_sort"
                    android:text="Sample space1"
                    android:textColor="@color/newgrey" />
            </LinearLayout>

            <ImageView
                android:visibility="invisible"
                android:id="@+id/image_sel"
                android:src="@drawable/check"
                android:layout_width="20dp"
                android:layout_height="20dp" />


        </LinearLayout>

    </com.kloudsync.techexcel.ui.MaskViewGroup>



</LinearLayout>
