<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/layout_space_item"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/spacerelativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp">

        <TextView
            android:id="@+id/tv_sort"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:background="@drawable/circle_expand" />

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:layout_toRightOf="@id/tv_sort"
                android:text="Sample space1"
                android:textColor="@color/black" />

            <TextView
                android:textSize="12sp"
                android:id="@+id/attachmentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_sort"
                android:text="Sample space1"
                android:textColor="@color/newgrey" />
        </LinearLayout>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/image_sel"
            android:src="@drawable/check"
            android:layout_width="20dp"
            android:layout_height="20dp" />


    </LinearLayout>

    <View
        android:layout_marginLeft="60dp"
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/divider_line" />

</LinearLayout>
