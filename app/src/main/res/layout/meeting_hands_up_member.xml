<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingTop="14dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.kloudsync.techexcel.view.CircleImageView
            android:id="@+id/member_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="2dp" />

        <TextView

            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/member_icon"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/name"
            android:background="@drawable/starter_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:text="@string/Starter"
            android:textColor="#3D78FB"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_presenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/txt_host"
            android:background="@drawable/presenter_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:text="@string/presenter"
            android:textColor="#FEA33D"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_is_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/txt_presenter"
            android:background="@drawable/me_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:text="@string/Me"
            android:textColor="#F3694C"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/txt_is_me"
            android:background="@drawable/me_bg"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:textSize="12sp" />

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/txt_type"
            android:id="@+id/image_hands_up"
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="58dp"
            android:src="@drawable/icon_hands_up" />

        <ImageView
            android:id="@+id/image_setting"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:padding="3dp"
            android:src="@drawable/member_more"
            android:visibility="gone" />


    </RelativeLayout>


</LinearLayout>
