<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingTop="14dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


            <com.kloudsync.techexcel.view.CircleImageView
                android:id="@+id/member_icon"
                android:padding="2dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                />

        <TextView

            android:layout_marginLeft="10dp"
            android:id="@+id/name"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/member_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <TextView
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:id="@+id/txt_presenter"
            android:textSize="12sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@drawable/presenter_bg"
            android:textColor="#FEA33D"
            android:layout_toRightOf="@id/name"
            android:text="@string/presenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:id="@+id/txt_is_me"
            android:textSize="12sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@drawable/me_bg"
            android:textColor="#F3694C"
            android:layout_toRightOf="@id/txt_presenter"
            android:text="@string/Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:id="@+id/txt_type"
            android:textSize="12sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@drawable/me_bg"
            android:textColor="#26C184"
            android:layout_toRightOf="@id/txt_is_me"
            android:text="android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>



</LinearLayout>
