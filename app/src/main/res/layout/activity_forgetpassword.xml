<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8F9">

    <include
        layout="@layout/common_title"
        android:id="@+id/layout_title"
        />

    <LinearLayout
        android:id="@+id/layout_top"
        android:background="@color/white"
        android:layout_marginTop="13dp"
        android:layout_below="@id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/lightgrey" />
        
        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_weight="1"
                android:textColor="#3E3F42"
                android:textSize="14sp"
                android:text="@string/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <TextView 
                android:id="@+id/tv_cphone"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:textColor="@color/darkgrey"
                android:textSize="14sp"
                android:text="+86"/>
            
            <EditText 
                android:id="@+id/et_telephone"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:singleLine="true"
                android:hint="@string/Input_Telephone"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:textColor="@color/darkgrey"
                android:textSize="14sp"/>
        </LinearLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey" />
        
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:gravity="left"
                android:textColor="#3E3F42"
                android:textSize="14sp"
                android:text="@string/Vertification_Code"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="@string/please_input_verify_code"
                android:id="@+id/et_checkcode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/darkgrey"
                android:textSize="14sp" />

            <View
                android:layout_marginRight="16dp"
                android:layout_marginLeft="26dp"
                android:background="#D3D3D3"
                android:layout_width="1dp"
                android:layout_height="17dp" />

            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/tv_sendcheckcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/Send_CheckCode"
                android:textColor="@color/skyblue"
                android:textSize="13sp" />


        </LinearLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey" />
        
        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal" >

            <TextView
                android:textColor="#3E3F42"
                android:textSize="14sp"
                android:text="@string/Password"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />


            <EditText

                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:singleLine="true"
                android:hint="@string/Input_new_Password"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:textColor="@color/darkgrey"
                android:textSize="14sp" />


        </LinearLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey" />
    </LinearLayout>

    <TextView
        android:layout_below="@id/layout_top"
        android:id="@+id/tv_reset"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:alpha="0.6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bottom_blue_bg"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="@string/confirm_reset" />
    >

    

</RelativeLayout>
