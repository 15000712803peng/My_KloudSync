<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="180dp"
android:layout_height="wrap_content">

<com.kloudsync.techexcel.view.BubbleLinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:angle="4dp"
    app:arrowHeight="12dp"
    app:arrowLocation="right"
    app:arrowPosition="33dp"
    app:arrowWidth="8dp"
    app:bubbleColor="#99000000">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/command_active"
        android:alpha="0.8"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:visibility="visible"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="6dp"
                android:textColor="#3D78FB"
                android:layout_marginBottom="8dp"
                android:text="Small size"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_big"
                android:layout_marginBottom="8dp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="Media size"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_large"
                android:layout_marginBottom="8dp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="Big size"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</com.kloudsync.techexcel.view.BubbleLinearLayout>
</LinearLayout>