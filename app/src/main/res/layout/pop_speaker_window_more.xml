<?xml version="1.0" encoding="utf-8"?>
<com.kloudsync.techexcel.view.BubbleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:angle="3dp"
    app:arrowHeight="10dp"
    app:arrowLocation="top"
    app:arrowPosition="10dp"
    app:arrowWidth="12dp"
    app:bubbleColor="@color/divider_line">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="22dp"/>

            <TextView
                android:id="@+id/txt_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="6dp"
                android:textColor="#3D78FB"
                android:layout_marginBottom="8dp"
                android:text="Small size\t  ！"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_big"
                android:layout_marginBottom="8dp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="Media size"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_large"
                android:layout_marginBottom="8dp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="Big size"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>




</com.kloudsync.techexcel.view.BubbleLinearLayout>