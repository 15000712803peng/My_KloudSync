<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Meeting"
            android:textColor="@color/brunette"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/addService"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/add_w"
            android:visibility="gone" />


        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/img_notice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/home_page_notice_icon_unchecked"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/tv_ns"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/home_page_red_icon"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="5sp"
                    android:visibility="gone" />

            </FrameLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_title"
            android:id="@+id/search_layout"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:paddingLeft="13dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/seach_bg_v2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <ImageView
                android:id="@+id/icon_search"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/searchicon" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/icon_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Search_Contact"
                android:textColor="@color/newgrey"
                android:textSize="13sp" />


        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="128dp"
        android:orientation="horizontal">



        <com.kloudsync.techexcel.ui.MaskViewGroup
            app:containerCornerRadius="16dp"
            app:containerDeltaLength="5dp"
            app:containerShadowColor="#B9C0E4"
            app:deltaX="2dp"
            app:deltaY="2dp"
            app:enable="true"
            app:containerShadowRadius="5dp"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/lin_join"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"

                android:background="@drawable/bg_meeting_card1"
                android:orientation="vertical">



                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/icon_join"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/icon_join" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_join"
                    android:layout_gravity="center"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/join2"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

        </com.kloudsync.techexcel.ui.MaskViewGroup>



        <com.kloudsync.techexcel.ui.MaskViewGroup
            app:containerCornerRadius="16dp"
            app:containerDeltaLength="5dp"
            app:containerShadowRadius="5dp"

            app:containerShadowColor="#D0C7BD"
            app:deltaX="2dp"
            app:deltaY="2dp"
            app:enable="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/lin_myroom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_meeting_card2"
                android:orientation="vertical">



                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/meeting_join"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/icon_startt" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meeting_join"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="17dp"
                    android:singleLine="true"
                    android:text="@string/MyKlassroom"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

        </com.kloudsync.techexcel.ui.MaskViewGroup>



        <com.kloudsync.techexcel.ui.MaskViewGroup
            app:containerCornerRadius="16dp"
            app:containerDeltaLength="5dp"
            app:containerShadowRadius="5dp"
            app:containerShadowColor="#DCE4B9"
            app:deltaX="2dp"
            app:deltaY="2dp"
            app:enable="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/lin_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_meeting_card3"
                android:orientation="vertical">


                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/new_join"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/icon_schedule" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/new_join"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="17dp"
                    android:singleLine="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/schMeeting"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

        </com.kloudsync.techexcel.ui.MaskViewGroup>



    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/divider_line">

            <TextView
                android:id="@+id/xxschool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="My School" />

            <ImageView
                android:id="@+id/changeschool"
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_events_all" />
        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/upcoming"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="18dp"
                android:text="@string/upcoming"
                android:textColor="@color/skyblue" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/pastdue"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/pastdue"
                android:textSize="18sp"
                android:textColor="@color/c5" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:textSize="18sp"
                android:id="@+id/finished"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/pastfinish"
                android:textColor="@color/c5" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:visibility="visible">


        <TextView
            android:id="@+id/inprogressunderline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skyblue" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/defaultpage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <include layout="@layout/defaultpage" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>